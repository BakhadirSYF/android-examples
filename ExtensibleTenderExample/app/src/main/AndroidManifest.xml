<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.clover.example.extensibletenderexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestTender1Activity"
            android:label="@string/title_activity_test_tender"
            android:exported="true">
            <meta-data
                android:name="com.clover.tender.meta.TENDER_TEXT"
                android:resource="@string/tender1_text"/>
            <meta-data
                android:name="com.clover.tender.meta.TENDER_ICON"
                android:resource="@mipmap/ic_launcher"/>
            <intent-filter>
                <action
                    android:name="com.clover.tender.action.HANDLE_TENDER"/>
                <category
                    android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
