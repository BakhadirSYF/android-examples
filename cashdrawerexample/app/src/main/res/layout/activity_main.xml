<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.clover.cashdrawerexample.MainActivity">

  <TextView
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_marginLeft="8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:text="Tap below to pop a cash drawer."/>

  <Space android:layout_width="0dp" android:layout_height="8dp"/>

  <ListView
      android:id="@+id/list_cash_drawers"
      android:layout_marginStart="8dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/text_empty"
      android:visibility="gone"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_marginLeft="8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:text="No connected cash drawers."/>
</LinearLayout>
