<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.clover.cfp.examples.RatingFragment"
    android:gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/sushi_portrait"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:alpha="0.4"
        android:contentDescription="@string/sushi_portrait"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/ratingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/question_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:scaleType="fitCenter"
                android:contentDescription="@string/big_star_off"
                android:id="@+id/imageView1off"
                android:src="@drawable/ic_star_off"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:visibility="gone"
                android:contentDescription="@string/big_star_on"
                android:id="@+id/imageView1on"
                android:src="@drawable/ic_star_on"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:contentDescription="@string/big_star_off"
                android:id="@+id/imageView2off"
                android:src="@drawable/ic_star_off"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:visibility="gone"
                android:contentDescription="@string/big_star_on"
                android:id="@+id/imageView2on"
                android:src="@drawable/ic_star_on"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:contentDescription="@string/big_star_off"
                android:id="@+id/imageView3off"
                android:src="@drawable/ic_star_off"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:visibility="gone"
                android:contentDescription="@string/big_star_on"
                android:id="@+id/imageView3on"
                android:src="@drawable/ic_star_on"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:contentDescription="@string/big_star_off"
                android:id="@+id/imageView4off"
                android:src="@drawable/ic_star_off"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:visibility="gone"
                android:contentDescription="@string/big_star_on"
                android:id="@+id/imageView4on"
                android:src="@drawable/ic_star_on"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:contentDescription="@string/big_star_off"
                android:id="@+id/imageView5off"
                android:src="@drawable/ic_star_off"/>
            <ImageView
                android:layout_width="@dimen/icon_width_port"
                android:layout_height="@dimen/icon_height_port"
                android:visibility="gone"
                android:contentDescription="@string/big_star_on"
                android:id="@+id/imageView5on"
                android:src="@drawable/ic_star_on"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
